<div class="container">
    <div class="row">
        {{!-- <p class="text-end"> Hola {{usuario}} <a class="btn btn-danger" href="/admin/login/logout">Cerrar Sesion
                <i class="fas fa-sign-out-alt"></i> </a></p> --}}
    </div>
    <div class="text-end">
        {{!-- <a href="/admin/productos/insertProducto" type="button" class="btn btn-primary align-self-center">+
            Agregar Nuevo Producto</a> --}}
        <a href="/admin/productos/nuevoProducto" type="button" class="btn btn-primary align-self-center">+ Agregar Nuevo
            Producto</a>


    </div>


    <table class="table table-bordered">
        <thead class="bg-dark text-white">
            <tr>
                <th scope="col">ID Despues borrar</th>
                <th scope="col">Producto</th>
                <th scope="col">Precio</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Marca</th>
                <th scope="col">Imagen</th>
                <th scope="col">Acciones (editar/borrar)</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td>{{this.id_producto}}</td>
                <th scope="row">{{this.nombre}}</th>
                <td>{{this.precio}}</td>
                <td>{{this.descripcion}}</td>
                <td>{{this.marca}}</td>
                <td>{{this.imagen}}</td>
                <td>
                    <p class="text-end"><a class="btn btn-primary mx-2" href="/admin/productos/edit/{{this.id_producto}}">
                            <i class="fa-solid fa-pencil"></i></a><a class="btn btn-danger"
                            href="/admin/productos/{{this.id_producto}}">
                            <i class="fa-solid fa-trash-can"></i></a></p>
                </td>
            </tr>
        </tbody>
        {{/each}}
    </table>



</div>